{
  "name": "lifecycler",
  "version": "0.0.0-semver",
  "description": "React lifecycle rendered component",
  "main": "lib/index.js",
  "scripts": {
    "build:production": "babel src --out-dir lib --ignore test.jsx",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "eslint --ext .js .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "npm run lint && npm run test:scripts",
    "test:scripts": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hvolschenk/lifecycler.git"
  },
  "keywords": [
    "React",
    "lifecycle",
    "render-props"
  ],
  "author": "Hendrik Volschenk <righteous.trespasser@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hvolschenk/lifecycler/issues"
  },
  "homepage": "https://github.com/hvolschenk/lifecycler#readme",
  "dependencies": {
    "lodash.isboolean": "^3.0.3",
    "lodash.isfunction": "^3.0.8",
    "prop-types": "^15.6.0",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^3.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.2.1",
    "react-dom": "^16.0.0",
    "semantic-release": "^8.2.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/.jest"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/.jest/shim.js",
      "<rootDir>/.jest/test-setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/.jest"
    ]
  }
}
